<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/view_dialog_bg"
    android:layout_marginHorizontal="15dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/view_text_view_bg"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/text_more"
        android:paddingHorizontal="15dp"
        android:paddingVertical="5dp"
        android:drawablePadding="15dp"
        android:drawableStart="@drawable/ic_more_small"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTelegram"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/text_telegram_chanel"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="15dp"
        android:drawableStart="@drawable/ic_telegram"
        android:drawablePadding="15dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvWallet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/text_wallet"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="15dp"
        android:drawableStart="@drawable/ic_wallet"
        android:drawablePadding="15dp"
        app:layout_constraintTop_toBottomOf="@id/tvTelegram"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvExpenses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/text_expenses"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="15dp"
        android:drawableStart="@drawable/ic_survey"
        android:drawablePadding="15dp"
        app:layout_constraintTop_toBottomOf="@id/tvWallet"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvGraph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/text_residue"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="15dp"
        android:drawableStart="@drawable/ic_graph"
        android:drawablePadding="15dp"
        app:layout_constraintTop_toBottomOf="@id/tvExpenses"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvMyNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/text_my_number"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="15dp"
        android:drawableStart="@drawable/ic_number"
        android:drawablePadding="15dp"
        app:layout_constraintTop_toBottomOf="@id/tvGraph"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvAllNumbers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/text_my_all_numbers"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="15dp"
        android:drawableStart="@drawable/ic_agenda"
        android:drawablePadding="15dp"
        app:layout_constraintTop_toBottomOf="@id/tvMyNumber"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCheck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/text_check_services"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="15dp"
        android:drawableStart="@drawable/ic_preview"
        android:drawablePadding="15dp"
        app:layout_constraintTop_toBottomOf="@id/tvAllNumbers"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvOtherApps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/text_other_apps"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="15dp"
        android:drawableStart="@drawable/ic_playstore"
        android:drawablePadding="15dp"
        app:layout_constraintTop_toBottomOf="@id/tvCheck"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>